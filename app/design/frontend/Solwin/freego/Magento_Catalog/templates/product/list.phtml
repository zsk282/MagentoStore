                            <?php
                            if (!$_product->getIsSalable()):
                                if ($outofstockEnable) {
                                    if ($outofstockLabelImage == 'label') {
                                        ?>
                                        <div class="out-of-stock-wrapper <?php echo $outofstockPositionLabel; ?>"><?php echo $outofstockTitle; ?></div>
                                        <?php
