                                    if ($outofstockLabelImage == 'image') {
                                        if ($outofstockImage) {
                                            ?>
                                            <div class="out-of-stock-wrapper <?php echo $outofstockPositionImage; ?>"><img src="<?php echo $imageUrl; ?>" height="<?php echo $outofstockImageHeight; ?>" width="<?php echo $outofstockImagewidth; ?>"/></div>
